<script is:inline>
  document.addEventListener("astro:page-load", ()=>{
    (function () {
        const el = document.getElementById('clock-time');
        if (!el) return;

        const format = (d) => d.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', hour12: true });

        const update = () => {
          const now = new Date();
          el.textContent = format(now);
        };

        // Update immediately
        update();

        // Calculate ms until next minute starts
        const now = new Date();
        const msToNextMinute = (60 - now.getSeconds()) * 1000 - now.getMilliseconds();

        // Set a timeout to align to the start of next minute, then set interval every 60s
        const timeout = setTimeout(() => {
          update();
          const interval = setInterval(update, 60 * 1000);
          // store interval id on element for potential cleanup
          el._clockInterval = interval;
        }, msToNextMinute);
        el._clockTimeout = timeout;
      })();
  });
  
</script>